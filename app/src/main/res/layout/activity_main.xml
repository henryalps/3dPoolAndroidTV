<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="5">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/user_record_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="9dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp" />
        <com.intel.tvpresent.ui.custom.FocusedTrue4TV
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:textSize="24sp"
            android:background="@color/Orange"
            android:textColor="@color/black"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分数 100"
            android:textSize="24sp"
            android:textColor="@color/Orange"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="9dp"
            app:layout_constraintLeft_toLeftOf="@+id/user_record_video"
            android:layout_marginStart="9dp" />

        <TextView
            android:id="@+id/lucky_ball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="幸运球 100"
            android:textSize="24sp"
            android:textColor="@color/Orange"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/score"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginStart="9dp"
            app:layout_constraintLeft_toRightOf="@+id/score"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/multipot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MULTIPOT 100"
            android:textSize="24sp"
            android:textColor="@color/Orange"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="9dp"
            app:layout_constraintLeft_toRightOf="@+id/lucky_ball" />

        <TextView
            android:id="@+id/max_combo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最大连击 100"
            android:textSize="24sp"
            android:textColor="@color/Orange"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="9dp"
            app:layout_constraintLeft_toRightOf="@+id/multipot"
            android:layout_marginLeft="0dp" />

        <TextView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星级 100"
            android:textSize="24sp"
            android:textColor="@color/Orange"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/score"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginStart="9dp"
            app:layout_constraintLeft_toRightOf="@+id/max_combo"
            app:layout_constraintHorizontal_bias="0.3" />

    </android.support.constraint.ConstraintLayout>
    </LinearLayout>
