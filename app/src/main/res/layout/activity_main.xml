<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="5">
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/user_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <include layout="@layout/list_header" android:id="@+id/real_header" />
    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent">

        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/number_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/user_record_video"
            app:layout_constraintLeft_toLeftOf="@+id/user_record_video"
            app:layout_constraintTop_toBottomOf="@+id/notice"
            app:layout_constraintVertical_bias="0.498" />

        <org.videolan.vlc.VlcVideoView
            android:id="@+id/user_record_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notice" />

        <com.intel.tvpresent.ui.custom.FocusedTrue4TV
            android:id="@+id/notice"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:background="@color/Orange"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:focusable="true"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="-1"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分数 100"
            android:textSize="24sp"
            android:textColor="@color/Orange"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/multipot"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/lucky_ball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="幸运球 100"
            android:textSize="24sp"
            android:textColor="@color/Orange"
            android:layout_marginStart="9dp"
            app:layout_constraintBottom_toBottomOf="@+id/score"
            android:layout_marginLeft="9dp"
            app:layout_constraintLeft_toRightOf="@+id/score"
            app:layout_constraintTop_toTopOf="@+id/score"
            app:layout_constraintVertical_bias="0.494"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/multipot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MULTIPOT 100"
            android:textSize="24sp"
            android:textColor="@color/Orange"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="9dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="9dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/max_combo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最大连击 100"
            android:textSize="24sp"
            android:textColor="@color/Orange"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/star"
            android:layout_marginEnd="8dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星级 100"
            android:textSize="24sp"
            android:textColor="@color/Orange"
            android:layout_marginStart="9dp"
            app:layout_constraintLeft_toRightOf="@+id/lucky_ball"
            android:layout_marginLeft="9dp"
            app:layout_constraintTop_toTopOf="@+id/score"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/holo_orange_dark"
            android:text="↑欢迎扫码关注↑"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:id="@+id/textView"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/barcode"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/barcode_2" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/barcode"
            android:src="@drawable/barcode"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            android:layout_marginEnd="16dp" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/barcode_2"
            android:src="@drawable/barcode_2"
            app:layout_constraintTop_toTopOf="@+id/barcode"
            app:layout_constraintRight_toLeftOf="@+id/barcode" />

    </android.support.constraint.ConstraintLayout>
    </LinearLayout>
